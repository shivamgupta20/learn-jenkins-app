pipeline {
    agent any

    stages {
        stage('Build') {
            agent {
                docker {
                    image 'node:18-alpine'
                    reuseNode true
                }
            }
            steps {
                sh '''
                    echo 'Build stage'
                    npm --version
                    node --version
                    npm ci
                    npm run build
                '''
            }
        }
        stage("Tests") {
            parallel {
                stage("Unit Tests") {
                    agent {
                        docker {
                            image 'node:18-alpine'
                            reuseNode true
                        }
                    }
                    steps {
                        npm run test
                    }
                }
                stage("E2E Tests") {
                    agent {
                        docker {
                            image 'node:18-alpine'
                            reuseNode true
                        }
                    }
                    steps {
                        npm i serve
                        node_modules/.bin/serve -s build & 
                        npx playwright test
                    }
                }
            }
            
            steps {
                sh'''
                    npm run test
                '''
            }
        }
    }
}
